<h3>Current Sprint "In Progress" Issues by Owner</h3>
<blockquote><p>Only issues that are marked as <strong>in progress</strong> are shown.</p></blockquote>
<table>
	<thead>
		<tr>
			<th>Repo</th>
			<th>Open Issues</th>
		</tr>
	</thead>
	<tbody>
		<% @repos.each do |repo| %>
			<tr>
				<td><%= repo[:name] %></td>
				<td><%= repo[:count] %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br>

<div class="row">
	<% @assignees.each do |assignee| %>
		<div class="row">
			<div class="col s1">
				<img src="<%= assignee[:avatar_url] %>" alt="" class="circle responsive-img">
			</div>
			<div class="col s11">
				<h4><%= assignee[:login] %></h4>
			</div>
		</div>
		<table>
			<thead>
				<tr>
					<th data-field="id">#</th>
					<th data-field="description">Description</th>
					<th data-field="labels">Labels</th>
					<th data-field="assignees">Assignees</th>
				</tr>
			</thead>
			<tbody>
				<% assignee[:issues].each do |issue| %>
				<tr>
					<td><a href="<%= issue[:html_url] %>">#<%= issue[:number] %></a></td>
					<td><%= issue[:title] %></td>
					<td>
						<% issue[:labels].each do |l| %>
							<div class="chip" style="background-color: #<%= l[:color] %>"><%= l[:name] %></div>
						<% end %>
					</td>
					<td>
<!-- 					<% issue[:assignees].each do |a| %>
					 <div class="chip">
					    <img src="<%= a[:avatar_url] %>" alt="Contact Person">
					    <%= a[:login] %>
					  </div>
					  <% end %> -->
					        
						<%= issue[:assignees].map{ |assignee| assignee[:login] }.join(", ") %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<br>
	<% end %>
</div>